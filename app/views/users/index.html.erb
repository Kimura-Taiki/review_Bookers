<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>
<%= render 'layouts/container_top', user: current_user %>
  <h2>Users</h2>
  <table class = "table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan = "3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= attachment_image_tag u, :profile_image, size: "40x40", fallback: "no_image.jpg" %></td>
          <td><%= u.name %></td>
          <td><%= link_to "Show", user_path(u) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= render 'layouts/container_bottom' %>
