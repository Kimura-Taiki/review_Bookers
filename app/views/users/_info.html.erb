<h2>User info</h2>
<table class = "table">
  <!--fallback属性で画像が無い際の代用画像を示します-->
  <%= attachment_image_tag user, :profile_image, size: "60x60", fallback: "no_image.jpg"%>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div class = "row">
  <%= link_to "", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
</div>
<h2 class = "mt-3">New Book</h2>
<%= form_with model: @new, url: books_path, method: :post, local: true do |b| %>
  <div class = "form-group">
    <%= b.label :title, "Title" %>
    <%= b.text_field :title, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= b.label :body, "Opinion" %>
    <%= b.text_area :body, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= b.submit class: "btn btn-success" %>
  </div>
<% end %>
