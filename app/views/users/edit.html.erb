<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>
<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= render 'layouts/error', model: current_user %>
      <%= form_with model: current_user, local: true do |u| %>
        <div class = "form-group">
          <%= u.label :name, "Name" %>
          <%= u.text_field :name, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= u.label :profile_image, "Image" %>
          <%= u.attachment_field :profile_image, class: "form-control-file" %>
        </div>
        <div class = "form-group">
          <%= u.label :introduction, "Introduction" %>
          <%= u.text_area :introduction, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= u.submit class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
