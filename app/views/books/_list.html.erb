<h2>Books</h2>
<table class = "table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |b| %>
      <tr>
        <td>
          <%= link_to user_path(b.user) do %>
            <%= attachment_image_tag b.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td><%= link_to b.title, book_path(b) %></td>
        <td><%= b.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>