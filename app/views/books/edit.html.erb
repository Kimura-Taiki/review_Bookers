<h1>Books#edit</h1>
<p>Find me in app/views/books/edit.html.erb</p>
<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= render 'layouts/error', model: @book %>
      <%= form_with model: @book, local: true do |b| %>
        <div class = "form-group">
          <%= b.label :title, "Title" %>
          <%= b.text_field :title, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= b.label :body, "Opinion" %>
          <%= b.text_area :body, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= b.submit class: "btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>