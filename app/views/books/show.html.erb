<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>
<%= render 'layouts/container_top', user: @book.user %>
  <h2>Book detail</h2>
  <table class = "table">
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag @book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
            </br>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td><%= link_to @book.title, url: book_path(@book) %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger", data: {confirm: "本当に削除しますか"} %></td>
      </tr>
    </tbody>
  </table>
<%= render 'layouts/container_bottom' %>